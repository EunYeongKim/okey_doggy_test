<div class="container" style="width:1000px; margin:0 auto; margin-top:10px;">
      <table width=1000 class="highlight">
        <thead>
          <tr>
            <th width=3% class="center-align">#</th>
            <th width=20% class="center-align">제목</th>
            <th width=20% class="center-align">내용</th>
            <th width=10% class="center-align">작성자</th>
            <th width=8% class="center-align">댓글 수</th>
            <th width=10% class="center-align">작성시간</th>
          </tr>
        </thead>
        
        <tbody>
        <!--<% post_num = @posts.count %>-->
         <% @posts.each do |post|%>
         <tr onclick="location.href='/posts/<%= post.id%>'" style="cursor:pointer;">
            <th scope="row" class="center-align"><%= post.id %></th>
            <td class="center-align"><%= post.title.truncate(20, separator: /\s/, ommission: "....") %></td>
            <td class="center-align"><%= post.content.truncate(20, separator: /\s/, ommission: "....") %></td>
            <td class="center-align"><%= post.user.nickname %></td>
            <td class="center-align"><%= post.comments.count %></td>
            <td class="center-align"><%= post.created_at %></td>
          </tr>
          <!--<% post_num-=1 %>-->
          <% end %>
        </tbody>
      </table>
      
    <div class="container">
        <div class="row justify-content-md-center">  
            <%= will_paginate @posts, renderer: MaterializePagination::Rails %>
        </div>
    </div>
    
    <div class="fixed-bottom row">
        <div class="col s12 offset-s10">
            <a class="btn-floating btn-large waves-effect waves-light amber lighten-1" href='posts/new'>
                <i class="large material-icons">mode_edit</i>
            </a>
        </div>
    </div>
    
</div>
    


